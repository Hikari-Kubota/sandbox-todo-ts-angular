{
  "name": "sandbox-todo-ts-angular",
  "version": "0.0.2",
  "description": "my sandbox.",
  "scripts": {
    "postinstall": "typings install",
    "build:js": "tsc -p ./",
    "build:css": "node-sass --output-style compressed src/styles/style.scss dist/style.css",
    "build:html": "jade -P src/markups/index.jade --out ./",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "watch:js": "watch 'npm run build:js' src/scripts/",
    "watch:css": "watch 'npm run build:css' src/styles/",
    "watch:html": "watch 'npm run build:html' src/markups/",
    "watch": "npm run watch:js & npm run watch:css & npm run watch:html"
  },
  "author": {
    "name": "yukiyo",
    "email": "yuki@giamnote.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yukink/sandbox-todo-ts-angular"
  },
  "license": "MIT",
  "dependencies": {
    "angular": "^1.5.3",
    "bootstrap": "^3.3.6"
  },
  "devDependencies": {
    "jade": "^1.11.0",
    "node-sass": "^2.1.1",
    "typescript": "^1.8.9",
    "typings": "^0.7.12",
    "watch": "^0.16.0"
  }
}
